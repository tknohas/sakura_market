%h1.text-3xl.font-bold.my-4.text-center 商品詳細

.flex
  = link_to 'トップ', vendor_products_path, class: 'bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l ml-4'
  - common_button_class = 'ml-8 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full'
  - if current_vendor.stock_quantity_for(@product).positive?
    = link_to '在庫編集', edit_vendor_product_stock_path(@product), class: common_button_class
  - else
    = link_to '在庫登録', new_vendor_product_stock_path(@product), class: common_button_class

%p.text-center.text-gray-600.mt-2.text-2xl 在庫数: #{current_vendor.stock_quantity_for(@product)}

.container.flex.justify-center.mt-4
  .flex.justify-center.mt-4
    .mr-4
      = render 'shared/product_image', product: @product, size: '660x438', variant: :large
    .flex.flex-col.items-start.ms-4
      %p.text-2xl 商品名: #{@product.name}
      %p.text-gray-700.text-2xl.mt-2 価格: #{@product.price}円
      %p.text-gray-600.mt-2.text-2xl 商品説明:
      %br #{@product.description}
